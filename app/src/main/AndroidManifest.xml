<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="wl.thinkine"
	>
	
	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name_tt"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.AppCompat.Light.NoActionBar"
		>
		
		<meta-data
			android:name="design_width_in_dp"
			android:value="360"/>
		<meta-data
			android:name="design_height_in_dp"
			android:value="640"/>
		
		<activity android:name="wl.ui.ActLaunch">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="wl.ui.ActLogin"
			android:screenOrientation="portrait"
			/>

		<activity
			android:name="wl.ui.ActMain"
			android:screenOrientation="portrait"
			/>
		
		<provider
			android:name="wl.app.FileProvider"
			android:authorities="auth:${packageName}.FileProvider"
			android:grantUriPermissions="true"
			android:exported="false"
			>
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/file_provider"
				/>
		</provider>
	</application>
</manifest>